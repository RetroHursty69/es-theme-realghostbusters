<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>2</zIndex>	      
        <type>horizontal</type>
        <pos>0 -0.012</pos>
        <size>1 1</size>
        <logoScale>1.15</logoScale>
        <logoSize>0.17 0.17</logoSize>
        <color>00000000</color>
        <maxLogoCount>5</maxLogoCount>
		<logoAlignment>bottom</logoAlignment>        
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>                 
         <path>./_inc/images/main_bottom.png</path>
      </image>
      <image name="background2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>3</zIndex>                 
         <path>./_inc/images/main_top.png</path>
      </image>                           
      <text name="systemInfo">     
         <pos>0 0.013</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>44dfba</color>
         <fontPath>./_inc/fonts/GelDoticaPlainHeavy.ttf</fontPath>
	     <fontSize>0.025</fontSize>
         <zIndex>4</zIndex>	     
      </text>            
   </view>
</feature>


